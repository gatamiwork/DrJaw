<Window x:Class="DrJaw.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DrJaw.Views.Controls"
        Title="Доктор ювелирка"
        Height="768" Width="1024"
        WindowStartupLocation="CenterScreen"
        materialDesign:ColorZoneAssist.Mode="PrimaryDark">

    <DockPanel>
        <local:MainMenu DockPanel.Dock="Top" />

        <StatusBar DockPanel.Dock="Bottom" FontSize="14">
            <StatusBarItem Content="Статус: Готов" />
            <StatusBarItem Content="{Binding CurrentUser}" HorizontalAlignment="Right"/>
        </StatusBar>

        <ContentControl x:Name="RoleContent" />
    </DockPanel>
</Window>
