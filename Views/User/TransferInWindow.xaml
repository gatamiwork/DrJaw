<Window x:Class="DrJaw.Views.User.TransferInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приёмка из других магазинов"
        Height="520" Width="820"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- СПИСОК (вытянутые карточки + чекбоксы) -->
        <ListView Grid.Row="0"
                  ItemsSource="{Binding Items}"
                  BorderThickness="0"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.ScrollUnit="Pixel"
                  ScrollViewer.CanContentScroll="True">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin"  Value="0,6"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment"   Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="8"
                            Background="#FFFFFF"
                            BorderBrush="#E5E5E5"
                            BorderThickness="1"
                            Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <!-- чек -->
                                <ColumnDefinition Width="108"/>
                                <!-- превью -->
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <!-- детали -->
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="200"/>
                                <!-- цена+итого -->
                            </Grid.ColumnDefinitions>

                            <!-- Чекбокс -->
                            <CheckBox Grid.Column="0"
                                      IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

                            <!-- Превью -->
                            <Border Grid.Column="1" Width="96" Height="96" Background="#FAFAFA" CornerRadius="6">
                                <Grid>
                                    <Image Source="{Binding Thumbnail}"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="Нет изображения"
                                               Foreground="#888" FontSize="12"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Thumbnail}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Детали -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Articul}" FontSize="16" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding Metal}" Foreground="#666"/>
                                    <TextBlock Text="  •  " Foreground="#AAA"/>
                                    <TextBlock Text="В группе: " Foreground="#666"/>
                                    <TextBlock Text="{Binding ItemCount}" Foreground="#666"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Цена/итог -->
                            <StackPanel Grid.Column="5" Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Price, StringFormat={}{0:N2}}"
                                           FontSize="14" Foreground="#333" />
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="Итого: " Foreground="#666"/>
                                    <TextBlock Text="{Binding ItemCount}" Foreground="#666"/>
                                    <TextBlock Text=" × " Foreground="#666"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N2}}" Foreground="#666"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- НИЖНЯЯ ПАНЕЛЬ -->
        <DockPanel Grid.Row="1" Margin="0,12,0,0">
            <TextBlock Text="{Binding TotalSelectedText}"
                       VerticalAlignment="Center" Foreground="#666"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="Принять" MinWidth="140" Height="36" Margin="0,0,8,0"
                        IsDefault="True"
                        Command="{Binding AcceptCommand}"/>
                <Button Content="Закрыть" MinWidth="120" Height="36"
                        IsCancel="True"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
