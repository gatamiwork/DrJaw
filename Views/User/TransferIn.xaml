<Window x:Class="DrJaw.Views.User.TransferIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrJaw.Views.User"
        mc:Ignorable="d"
        Title="TransferIn" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="DataGridTransfer" 
                  Grid.Row="0"
                  Grid.ColumnSpan="3"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  MouseDoubleClick="DataGridTransfer_MouseDoubleClick">
        </DataGrid>

        <Grid Grid.Row="1" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Левая часть: метки -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <Label x:Name="TotalWeight" Content="Общий вес: 0" />
                <Label x:Name="TotalCount" Content="Количество: 0" />
            </StackPanel>

            <!-- Правая часть: кнопки -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                <Button x:Name="buttonCancelTransfer" Click="buttonCancelTransfer_Click" Content="Вернуть" Width="100" />
                <Button x:Name="buttonTranster" Click ="buttonTranster_Click" Content="Отгрузить" Width="100" />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
