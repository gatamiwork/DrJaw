<Window x:Class="DrJaw.Views.User.CartLom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет лома"
        Height="250" Width="380"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Вес лома -->
        <Label Grid.Row="0" Grid.Column="0" Content="Вес лома:" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <TextBox x:Name="textBoxLomWeight" Width="80" Margin="0,0,5,0"/>
            <TextBox x:Name="textBoxLomWeightClear" Width="80" IsReadOnly="True"/>
        </StackPanel>

        <!-- Потери -->
        <Label Grid.Row="1" Grid.Column="0" Content="Процент потерь:" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="comboBoxLost" Margin="0,10,0,0" Width="160">
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="12"/>
        </ComboBox>

        <!-- Вес изделий -->
        <Label Grid.Row="2" Grid.Column="0" Content="Вес изделий:" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="textBoxItemsWeight" IsReadOnly="True" Margin="0,10,0,0"/>

        <!-- Цена за грамм лома -->
        <Label Grid.Row="3" Grid.Column="0" Content="Стоимость за грамм лома:" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="textBoxLomPerGram" Margin="0,10,0,0"/>

        <!-- Цена за грамм изделия -->
        <Label Grid.Row="4" Grid.Column="0" Content="Стоимость за грамм изделия:" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="textBoxItemPerGram" IsReadOnly="True" Margin="0,10,0,0"/>

        <!-- К оплате -->
        <Label Grid.Row="5" Grid.Column="0" Content="К оплате:" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="textBoxPrice" IsReadOnly="True" Margin="0,10,0,0"/>

        <!-- Кнопка -->
        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Content="Добавить" Margin="0,15,0,0" Height="30"/>
    </Grid>
</Window>
