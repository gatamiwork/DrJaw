<Window x:Class="DrJaw.Views.User.ReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Возвраты" Height="620" Width="980"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- Источник с группировкой по заголовку -->
        <CollectionViewSource x:Key="GroupedLines" Source="{Binding Lines}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GroupKey"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <!-- Группа: без экспандера, всегда раскрыта -->
        <GroupStyle x:Key="AlwaysExpandedGroupStyle">
            <!-- Шапка группы -->
            <GroupStyle.HeaderTemplate>
                <DataTemplate>
                    <!-- DataContext тут = CollectionViewGroup -->
                    <Border Background="#F6F6F6"
                            BorderBrush="#E6E6E6"
                            BorderThickness="1"
                            Padding="8"
                            CornerRadius="6"
                            Margin="0,8,0,4">
                        <StackPanel Orientation="Horizontal">
                            <!-- Name = твой GroupKey -->
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="  •  " Foreground="#999"/>
                            <TextBlock Text="{Binding ItemCount, StringFormat=Позиций: {0}}" Foreground="#666"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </GroupStyle.HeaderTemplate>

            <!-- Виртуализируем элементы группы -->
            <GroupStyle.Panel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </GroupStyle.Panel>

            <!-- Свой шаблон контейнера без Expander -->
            <GroupStyle.ContainerStyle>
                <Style TargetType="{x:Type GroupItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                <!-- Grid тянется на всю ширину -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Рисуем заголовок прямо тут (данные = CollectionViewGroup) 
                                    <ContentPresenter Grid.Row="0" Content="{TemplateBinding ContentTemplate}">
                                         Но нам нужно отрисовать HeaderTemplate, поэтому вместо ContentPresenter
                                             просто вставим тот же UI, что и в HeaderTemplate, повторно: 
                                    </ContentPresenter> -->

                                    <!-- Проще: повторяем хедер через HeaderTemplateSelector не нужно,
                                         поэтому сразу вставим HeaderTemplate снова: -->
                                    <Border Grid.Row="0" Background="{x:Null}" Padding="0" Margin="0">
                                        <ContentPresenter Content="{Binding}"
                                                          ContentTemplate="{Binding RelativeSource={RelativeSource AncestorType=GroupItem}, Path=TemplatedParent.GroupStyle.HeaderTemplate}"/>
                                    </Border>

                                    <!-- Содержимое группы -->
                                    <ItemsPresenter Grid.Row="1"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </GroupStyle.ContainerStyle>
        </GroupStyle>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верх: дата + кнопки -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="Дата:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Width="160"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Возврат" MinWidth="140" Height="34" Margin="0,0,8,0"
                        Command="{Binding ReturnCommand}"/>
                <Button Content="Закрыть" MinWidth="120" Height="34" IsCancel="True"
                        Command="{Binding CloseCommand}"/>
            </StackPanel>
        </DockPanel>

        <!-- Список (сгруппированный) -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Source={StaticResource GroupedLines}}"
                  BorderThickness="0"
                  ScrollViewer.CanContentScroll="True"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.ScrollUnit="Pixel"
                  HorizontalContentAlignment="Stretch">
            <!-- тянем элементы на всю ширину -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,4"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.GroupStyle>
                <StaticResource ResourceKey="AlwaysExpandedGroupStyle"/>
            </ListView.GroupStyle>

            <!-- Элемент: чекбокс + превью + детали + цена -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="8" BorderBrush="#E6E6E6" BorderThickness="1"
                            Padding="10" Margin="0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="108"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="160"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0"
                                      IsChecked="{Binding IsMarked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <Border Grid.Column="1" Width="96" Height="96" Background="#FAFAFA" CornerRadius="6">
                                <Grid>
                                    <Image Source="{Binding Thumbnail}"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           SnapsToDevicePixels="True"/>
                                    <TextBlock Text="Нет изображения"
                                               Foreground="#888" FontSize="12"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Thumbnail}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Articul}" FontSize="16" FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding Size, StringFormat=Размер: {0}}" Foreground="#666"/>
                                    <TextBlock Text="  •  " Foreground="#AAA"/>
                                    <TextBlock Text="{Binding Weight, StringFormat=Вес: {0:N2}}" Foreground="#666"/>
                                    <TextBlock Text="  •  " Foreground="#AAA"/>
                                    <TextBlock Text="{Binding Stones, StringFormat=Вставки: {0}}" Foreground="#666"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Metal}" Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Price, StringFormat=Цена: {0:N2}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Низ -->
        <DockPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBlock Text="{Binding StatusText}" Foreground="#666"
                       DockPanel.Dock="Left" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
