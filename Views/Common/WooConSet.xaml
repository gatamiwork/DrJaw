<Window x:Class="DrJaw.Views.Common.WooConSet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Доктор ювелирка" Height="345" Width="440"
        materialDesign:ColorZoneAssist.Mode="PrimaryDark" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top">
            <Label
                Content="Настройки подключения к Сайту"
                Margin="0,0,0,15" 
                VerticalAlignment="Top"
                Style="{StaticResource MaterialDesignLabel}" FontSize="14" HorizontalAlignment="Center"/>
            <TextBox
                 Margin="0 0 0 10"
                 materialDesign:HintAssist.Hint="Сайт"
                 materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                 Style="{StaticResource MaterialDesignTextBox}" FontSize="14"/>
            <PasswordBox
                 Margin="0 0 0 10"
                 materialDesign:HintAssist.Hint="Consumer key"
                 materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                 Style="{StaticResource MaterialDesignPasswordBox}" FontSize="14" />
            <PasswordBox
                 Margin="0 0 0 10"
                 materialDesign:HintAssist.Hint="Consumer secret"
                 materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                 Style="{StaticResource MaterialDesignPasswordBox}" FontSize="14" />

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!-- Левая метка -->
                    <ColumnDefinition Width="*" />
                    <!-- ComboBox растягивается -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Правая метка -->
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
           Content="Период обновления данных:"
           VerticalAlignment="Center"
           Style="{StaticResource MaterialDesignLabel}"
           FontSize="14"/>

                <ComboBox Grid.Column="1"
              Margin="10,0"
              Style="{StaticResource MaterialDesignComboBox}"
              FontSize="14"
              HorizontalAlignment="Stretch" />

                <Label Grid.Column="2"
           Content="мин."
           VerticalAlignment="Center"
           Style="{StaticResource MaterialDesignLabel}"
           FontSize="14"/>
            </Grid>
            <Button Content="Выбрать"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="Gray"
                    MinWidth="100"
                    Padding="16 8"
                    Style="{StaticResource MaterialDesignOutlinedButton}" FontWeight="Bold" FontSize="16" FontFamily="Segoe UI" Height="40" />
        </StackPanel>
    </Grid>
</Window>
