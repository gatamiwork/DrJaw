<Window x:Class="DrJaw.Views.Common.MSSQLConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MSSQL Connect" Height="370" Width="520"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="B2V"/>

        <!-- Отключаем ВСЕ поля при IsBusy -->
        <Style TargetType="Control" x:Key="BusyDisableControl">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Кнопки тоже блокируем при IsBusy -->
        <Style TargetType="Button" BasedOn="{StaticResource BusyDisableControl}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource BusyDisableControl}"/>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource BusyDisableControl}"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Server -->
        <TextBox Grid.Row="0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Server"
                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                 Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,0"/>

        <!-- spacing row 1 -->

        <!-- Database -->
        <TextBox Grid.Row="2"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Database"
                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                 Text="{Binding Database, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- spacing row 3 -->

        <!-- Username -->
        <TextBox Grid.Row="4"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Username"
                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- spacing row 5 -->

        <!-- Password -->
        <PasswordBox Grid.Row="6"
                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                     materialDesign:HintAssist.Hint="Password"
                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                     x:Name="PwdBox"/>

        <!-- spacer row 7 -->

        <!-- Bottom bar -->
        <StackPanel Grid.Row="8" Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,8,0,0">

            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True" Width="22" Height="22" Margin="0,0,8,0"
                         Visibility="{Binding IsBusy, Converter={StaticResource B2V}}"/>

            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Margin="0,0,12,0"
                       Visibility="{Binding IsBusy, Converter={StaticResource B2V}}"/>

            <Button Content="Подключиться" Width="160" IsDefault="True"
                    Command="{Binding ConnectCommand}"/>
        </StackPanel>
    </Grid>
</Window>
