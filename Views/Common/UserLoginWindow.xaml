<Window x:Class="DrJaw.Views.Common.UserLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор пользователя"
        Height="225" Width="419"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="B2V"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Пользователь:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox Grid.Row="1" Grid.ColumnSpan="2"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  DisplayMemberPath="Name"
                  MinWidth="340" Margin="0,0,0,12"/>

        <!-- Для USER: выбор точки -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8"
                    Visibility="{Binding IsUser, Converter={StaticResource B2V}}">
            <TextBlock Text="Точка:" Width="140" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox ItemsSource="{Binding Marts}"
                      SelectedItem="{Binding SelectedMart}"
                      DisplayMemberPath="Name"
                      MinWidth="240"/>
        </StackPanel>

        <!-- Для ADMIN: пароль -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8"
                    Visibility="{Binding IsAdmin, Converter={StaticResource B2V}}">
            <TextBlock Text="Пароль:" Width="140" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <PasswordBox x:Name="AdminPwdBox" MinWidth="240"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="ОК" Width="110" IsDefault="True" Command="{Binding OkCommand}" Margin="0,0,8,0"/>
            <Button Content="Отмена" Width="110" IsCancel="True"  Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
