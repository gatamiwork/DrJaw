<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Шрифты и базовые размеры -->
    <FontFamily x:Key="App.FontFamily">Segoe UI</FontFamily>
    <sys:Double x:Key="App.FontSize.Base">14</sys:Double>
    <sys:Double x:Key="App.FontSize.Small">12</sys:Double>
    <sys:Double x:Key="App.FontSize.Medium">16</sys:Double>
    <sys:Double x:Key="App.FontSize.Large">18</sys:Double>
    <sys:Double x:Key="App.FontSize.XLarge">22</sys:Double>

    <!-- Контролы -->
    <sys:Double x:Key="App.Control.MinHeight">36</sys:Double>
    <sys:Double x:Key="App.Button.MinWidth">110</sys:Double>
    <Thickness x:Key="App.Control.Padding">8,6,8,6</Thickness>
    <Thickness x:Key="App.Control.Margin">0,6,0,6</Thickness>

    <!-- Отступы -->
    <Thickness x:Key="Space.0">0</Thickness>
    <Thickness x:Key="Space.4">4</Thickness>
    <Thickness x:Key="Space.8">8</Thickness>
    <Thickness x:Key="Space.12">12</Thickness>
    <Thickness x:Key="Space.16">16</Thickness>
    <Thickness x:Key="Space.24">24</Thickness>

</ResourceDictionary>
